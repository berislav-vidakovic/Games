[Unit]
Description=GamesJ Spring Boot Backend
After=network.target

[Service]
EnvironmentFile=/var/www/games/backend/.env.dev
WorkingDirectory=/var/www/games/backend
ExecStart=/usr/bin/java -jar /var/www/games/backend/gamesj-0.0.1-SNAPSHOT.jar
SuccessExitStatus=143
Restart=always
RestartSec=10
